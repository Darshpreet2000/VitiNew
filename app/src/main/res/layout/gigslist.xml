<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="#673AB7"
    android:orientation="vertical"
    android:id="@+id/gigs_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/gigsicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/com_truecaller_icon" />

    <TextView
        android:id="@+id/gigstitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"

        android:text="gigs"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold|italic" />
    </LinearLayout>

    <TextView
        android:id="@+id/gigscats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:paddingLeft="2dp"
        android:text="gigs cats"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/gigsbrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="gigs brand"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/gigs_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="gigs description"
        android:textColor="#ffffff" />


</LinearLayout>
