<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.frappProfile">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/userimage_on_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_image" />
    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraint2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/userimage_on_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
     <TextView
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         android:paddingBottom="10dp"
         android:textSize="20sp"
         android:textColor="@color/black"
         android:textStyle="bold"
         android:id="@+id/username_frappprofile"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Darshpreet Singh"/>
        <ImageView
            android:id="@+id/phone_profile"
            app:layout_constraintTop_toBottomOf="@id/username_frappprofile"
            app:layout_constraintLeft_toLeftOf="@id/username_frappprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone_no"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@id/username_frappprofile"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/phone_number"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8826200426"/>
        <ImageView
            android:id="@+id/email_ic"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/phone_profile"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/email"/>
        <TextView
            app:layout_constraintTop_toTopOf="@id/phone_number"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:id="@+id/email"
            android:text="dsingh200021@gmail.com"
            android:layout_height="wrap_content"/>
        <ImageView
            android:paddingTop="10dp"
            android:id="@+id/location_ic"
            app:layout_constraintTop_toBottomOf="@id/email_ic"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location"/>

        <TextView
            app:layout_constraintTop_toTopOf="@id/email"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:text="Delhi"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/constraint2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="@color/colorPrimary"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            app:layout_constraintTop_toBottomOf="@id/constraint2"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp">
           <TextView
               android:paddingRight="40dp"
               android:layout_alignParentRight="true"
               android:layout_centerInParent="true"
               android:textStyle="bold"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:textSize="16sp"
               android:text="Explore Exciting Missions"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view2"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/mainheading1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skills and Talents"/>

            <TextView
               android:layout_below="@id/mainheading1"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="what are you good at?"/>
            <Button
                app:theme="@style/profile_button"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:height="40dp"
                android:width="100dp"
                android:textColor="@color/white"
                android:background="@drawable/frapp_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:text="Add skills"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view3"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/mainheading2"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profession"/>

            <TextView
                android:layout_below="@id/mainheading2"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What do you currently do?"/>
            <Button
                app:theme="@style/profile_button"
                android:textColor="@color/white"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:height="40dp"
                android:width="160dp"
                android:background="@drawable/frapp_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:text="Add profession"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/card_view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view4"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:id="@+id/mainheading3"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Languages"/>

            <TextView
                android:layout_below="@id/mainheading3"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What do you speak?"/>
            <Button
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:height="40dp"
                android:width="160dp"
                app:theme="@style/profile_button"
                android:textColor="@color/white"
                android:background="@drawable/frapp_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:text="Add language"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>