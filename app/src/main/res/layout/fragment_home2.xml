<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Home">

    <ImageView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/image"
        android:layout_height="100dp" />
 <TextView
     android:paddingLeft="10dp"
     android:layout_toRightOf="@id/userimagenew"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:textStyle="bold"
     android:id="@+id/username"
     android:textSize="18sp"
     android:textColor="@color/white"
     android:text=""/>
    <ImageView
        android:id="@+id/userimagenew"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@drawable/user_image" />

    <TextView
        android:id="@+id/starting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_toRightOf="@id/userimagenew"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Welcome to Herody app.Complete "
        android:textColor="@color/white" />
    <TextView
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/userimagenew"
        android:layout_height="wrap_content"
        android:layout_below="@id/starting"
        android:textColor="@color/white"
        android:text="Mission to earn Money."/>



<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_below="@id/image"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <TextView
       android:layout_margin="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="@style/TextAppearance.AppCompat.Large"
       android:layout_above="@+id/HomeMyprojectRecyclerView"
       android:text="My Project"/>
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/HomeMyprojectRecyclerView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ImageViewHome" />

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="My Gigs"
        android:id="@+id/mygigs"
       android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@+id/HomeMyprojectRecyclerView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/HomegigsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_below="@id/mygigs" />

    <ProgressBar
        android:id="@+id/progressBarHome"
        style="?android:attr/progressBarStyle"
        android:layout_width="107dp"
        android:layout_height="105dp"
        android:layout_alignBottom="@+id/HomeMyprojectRecyclerView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="111dp" />
</LinearLayout>
</RelativeLayout>
</ScrollView>