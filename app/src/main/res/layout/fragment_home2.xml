<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Home">

    <ImageView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/image"
        android:layout_height="100dp" />
 <TextView
     android:layout_marginTop="5dp"
     android:paddingLeft="10dp"
     android:layout_toRightOf="@id/userimagenew"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:textStyle="bold"
     android:id="@+id/username"
     android:textSize="18sp"
     android:textColor="@color/white"
     android:text=""/>
    <ImageView
        android:id="@+id/userimagenew"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@drawable/user_image" />

    <TextView
        android:id="@+id/starting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_toRightOf="@id/userimagenew"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Welcome to Herody app.Complete "
        android:textColor="@color/white" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/starting"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/userimagenew"
        android:paddingLeft="10dp"
        android:text="Gigs to earn Money."
        android:textColor="@color/white" />

    <LinearLayout
    android:layout_marginTop="20dp"
    android:layout_below="@id/image"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/projectlistlayout"
            app:cardCornerRadius="8dp"
            app:cardElevation="7dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp">

            <TextView

                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Featured Campaigns"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/tools"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="7dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="8dp">
            <TextView

                android:layout_margin="5dp"
android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Brand Offers"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/tools"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="7dp"

            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="8dp">
            <TextView
                android:layout_margin="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Limited Time Projects"/>
        </androidx.cardview.widget.CardView>
</LinearLayout>
</RelativeLayout>
</ScrollView>