<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"

    android:id="@+id/campaignlistlayout"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        android:id="@+id/campaign_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/campaigntitle"
                android:layout_margin="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campaign" />
            <ImageView
                android:id="@+id/campaignicon"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/com_truecaller_icon" />

        </LinearLayout>



        <TextView
            android:id="@+id/campaignbrand"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="campaign brand"
            android:textSize="22sp" />

    </LinearLayout>
</LinearLayout>