<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/dark_blue"
    android:layout_height="match_parent"
    tools:context=".LoginRegister">


    <ImageView
        android:id="@+id/imagelogo"
        android:layout_width="167dp"
        android:layout_height="63dp"
        android:layout_above="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="222dp"
        android:layout_marginBottom="0.1dp"
        android:src="@drawable/herodylogo" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="10dp"
        android:text="Welcome to Herody."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:id="@+id/relative"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/loginregister">
    </View>

    <TextView
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="Register/Login Using"
        android:layout_width="wrap_content"
        android:id="@+id/registerlogintext"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/loginbutton"
        android:text="Login"
        android:onClick="login"
        android:background="@color/dark_blue"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_below="@id/registerlogintext"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="OR"
      android:layout_below="@id/loginbutton"
      android:textColor="@color/black"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/truecallerbutton"
        android:textColor="@color/white"
        android:background="@color/dark_red"
        android:layout_height="wrap_content"
        android:text="Truecaller"
        android:onClick="truecaller"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/loginbutton"/>

</RelativeLayout>

    <TextView
        android:id="@+id/donthaveaccount"
        android:layout_width="293dp"
        android:layout_height="46dp"
        android:layout_below="@+id/relative"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="114dp"
        android:onClick="register"
        android:paddingLeft="80dp"
        android:text=" Register With Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>